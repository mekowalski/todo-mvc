<section class="todoapp">
  <header class="header">
    <h1>honey do</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, class: "new-todo", placeholder: (@list.errors.full_messages_for(:name).first || "Enter a name for list") %>

      <%= f.submit style: "display: none" %>
    <% end %>
  </header>

  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <%= @lists.each do |list| %>
      <li>
        <div class="view">
          <input class="toggle" type="checkbox">
          <label><%= link_to list.name, list_path(list) %></label>
        </div>
      </li>
      <% end %>
    </ul>
  </section>

</section>

<footer class="info">
  <p>You're logged in as: <%= @current_user.email %></p>
	<p><%= link_to 'Logout', logout_path %></p>
</footer>
