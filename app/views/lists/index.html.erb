<section class="todoapp">
  <header class="header">
    <h1>honey do</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, :class => 'new-todo' %>
                                            <!-- params[:list][:name] -->
      <input class="new-todo" type="text" name="list[name]" id="list_name">
    <% end %>
  </header

  <section class="main">
    <ul class="todo-list">
      <%= @lists.each do |list| %>
      <li>
        <div class="view">
          <label><%= link_to list.name, list_path(list) %></label>
        </div>
      </li>
      <% end %>
    </ul>
  </section>
  <footer class="footer">
  </footer>
</section>
