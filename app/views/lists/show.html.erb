<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @item]) do |f| %>
      <%= f.text_field :description, class: "new-todo", placeholder: (@item.errors.full_messages_for(:description ).first || "Enter a new item") %>

      <%= f.submit style: "display: none" %>
    <% end %>
  </header>

  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <%= render collection: @list.items, partial: 'items/item_li', as: :item %>
    </ul>
  </section>

  <footer class="footer">
  </footer>
</section>

<!-- embed a template -->
<!-- make this generic, instead of item_22, it will be item_{{id}} -->
<!-- Handlebars tempalte -->
<script id='item-template' type="text/x-handlebars-template">
  <li class="item" id="item_{{id}}">
    <div class="view">
      <form class="edit_item" id="edit_item_{{id}}" action="/lists/<%= @list.id %>/items/{{id}}" accept-charset="UTF-8" method="post">
        <input name="utf8" type="hidden" value="âœ“">
        <input type="hidden" name="_method" value="patch">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <!-- Rails can generate authenticity_token for template -->
        <input name="item[status]" type="hidden" value="0">
        <input class="toggle" type="checkbox" value="1" name="item[status]" id="item_status">
      </form>

      <label>{{description}}</label>

      <form class="button_to" method="post" action="/lists/<%= @list.id %>/items/{{id}}">
        <input type="hidden" name="_method" value="delete">
        <input class="destroy" type="submit" value="x">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </li>
</script>

