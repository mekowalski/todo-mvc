<%= li_for_item(item) do %>
  <div class="view">
    <%= form_for_item_status(item) %>
    <label><%= item.description %></label>
    <form action="<%= list_item_path(item.list, item) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">

    <button type="submit" class="destroy"></button>
  </div>
<% end %>
